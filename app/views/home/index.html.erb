<% provide(:title, "Your Orders") %>

<p id="notice"><%= notice %></p>

<h1>Welcome to e-Kirana</h1>
<% @items.each do |item| %>
	<div class="jumbotron ">
		<h2><%= link_to item.name, '#' %></h2>
		<p><small><%= item.description[0..49]+'...' %></small></p>
		<p><b>Price: $</b><%= item.price %></p>
		<button type="button" class="btn btn-warning" onclick="reveal()">Add to Cart</button>
	</div>
	<hr>
<% end %>


